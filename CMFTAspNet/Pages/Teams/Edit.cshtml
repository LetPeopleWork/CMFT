@page
@model CMFTAspNet.Pages.Teams.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Team</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Entity.Id" />
            <div class="form-group">
                <label asp-for="Entity.Name" class="control-label">Team Name:</label>
                <input asp-for="Entity.Name" class="form-control" />
                <span asp-validation-for="Entity.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entity.ProjectName" class="control-label">Project Name:</label>
                <input asp-for="Entity.ProjectName" class="form-control" />
                <span asp-validation-for="Entity.ProjectName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Entity.FeatureWIP" class="control-label">Feature WIP:</label>
                <input asp-for="Entity.FeatureWIP" class="form-control" />
                <span asp-validation-for="Entity.FeatureWIP" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Entity.ThroughputHistory" class="control-label">History in Days:</label>
                <input asp-for="Entity.ThroughputHistory" class="form-control" />
                <span asp-validation-for="Entity.ThroughputHistory" class="text-danger"></span>
            </div>

            <!-- Display existing AreaPaths -->
            @foreach (var areaPath in Model.Entity.AreaPaths)
            {
                <div class="form-group">
                    <label>Area Path:</label>
                    <input type="text" name="Team.AreaPaths" class="form-control" value="@areaPath" />
                    <button class="btn btn-outline-danger remove-field" type="button">Remove</button>
                </div>
            }

            <!-- Display existing WorkItemTypes -->
            @foreach (var workItemType in Model.Entity.WorkItemTypes)
            {
                <div class="form-group">
                    <label>Work Item Type:</label>
                    <input type="text" name="Team.WorkItemTypes" class="form-control" value="@workItemType" />
                    <button class="btn btn-outline-danger remove-field" type="button">Remove</button>
                </div>
            }

            <!-- Display existing IgnoredTags -->
            @foreach (var ignoredTag in Model.Entity.IgnoredTags)
            {
                <div class="form-group">
                    <label>Ignored Tag:</label>
                    <input type="text" name="Team.IgnoredTags" class="form-control" value="@ignoredTag" />
                    <button class="btn btn-outline-danger remove-field" type="button">Remove</button>
                </div>
            }

            <!-- Display existing AdditionalRelatedFields -->
            @foreach (var additionalField in Model.Entity.AdditionalRelatedFields)
            {
                <div class="form-group">
                    <label>Additional Related Field:</label>
                    <input type="text" name="Team.AdditionalRelatedFields" class="form-control" value="@additionalField" />
                    <button class="btn btn-outline-danger remove-field" type="button">Remove</button>
                </div>
            }

            <!-- Display existing WorkTrackingSystemOptions -->
            @for (int i = 0; i < Model.Entity.WorkTrackingSystemOptions.Count; i++)
            {
                <div class="form-group">
                    <label>Work Tracking System Option:</label>
                    <input type="text" name="Team.WorkTrackingSystemOptions[@i].Key" class="form-control" value="@Model.Entity.WorkTrackingSystemOptions[i].Key" />
                    <input type="text" name="Team.WorkTrackingSystemOptions[@i].Value" class="form-control" value="@Model.Entity.WorkTrackingSystemOptions[i].Value" />
                    <button class="btn btn-outline-danger remove-option" type="button">Remove</button>
                </div>
            }

            <!-- Dynamic input fields for AreaPaths -->
            <div class="form-group">
                <label>Area Paths:</label>
                <div id="areaPathsContainer"></div>
                <button type="button" id="addAreaPath" class="btn btn-primary mt-2">Add Area Path</button>
            </div>

            <!-- Dynamic input fields for WorkItemTypes -->
            <div class="form-group">
                <label>Work Item Types:</label>
                <div id="workItemTypesContainer"></div>
                <button type="button" id="addWorkItemType" class="btn btn-primary mt-2">Add Work Item Type</button>
            </div>

            <!-- Dynamic input fields for IgnoredTags -->
            <div class="form-group">
                <label>Ignored Tags:</label>
                <div id="ignoredTagsContainer"></div>
                <button type="button" id="addIgnoredTag" class="btn btn-primary mt-2">Add Ignored Tag</button>
            </div>

            <!-- Dynamic input fields for AdditionalRelatedFields -->
            <div class="form-group">
                <label>Additional Related Fields:</label>
                <div id="additionalFieldsContainer"></div>
                <button type="button" id="addAdditionalField" class="btn btn-primary mt-2">Add Additional Field</button>
            </div>

            <div class="form-group">
                <label asp-for="Entity.WorkTrackingSystem" class="control-label">Work Tracking System:</label>
                <select asp-for="Entity.WorkTrackingSystem" class="form-control"></select>
                <span asp-validation-for="Entity.WorkTrackingSystem" class="text-danger"></span>
            </div>

            <!-- Dynamic input fields for WorkTrackingSystemOptions -->
            <div class="form-group">
                <label>Work Tracking System Options:</label>
                <div id="workTrackingOptionsContainer"></div>
                <button type="button" id="addOption" class="btn btn-primary mt-2">Add Option</button>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Function to add AreaPath input field
            $("#addAreaPath").click(function () {
                $("#areaPathsContainer").append('<div class="input-group mt-2">' +
                    '<input type="text" name="Team.AreaPaths" class="form-control" />' +
                    '<div class="input-group-append">' +
                    '<button class="btn btn-outline-danger remove-field" type="button">Remove</button>' +
                    '</div>' +
                    '</div>');
            });

            // Function to add WorkItemType input field
            $("#addWorkItemType").click(function () {
                $("#workItemTypesContainer").append('<div class="input-group mt-2">' +
                    '<input type="text" name="Team.WorkItemTypes" class="form-control" />' +
                    '<div class="input-group-append">' +
                    '<button class="btn btn-outline-danger remove-field" type="button">Remove</button>' +
                    '</div>' +
                    '</div>');
            });

            // Function to add IgnoredTag input field
            $("#addIgnoredTag").click(function () {
                $("#ignoredTagsContainer").append('<div class="input-group mt-2">' +
                    '<input type="text" name="Team.IgnoredTags" class="form-control" />' +
                    '<div class="input-group-append">' +
                    '<button class="btn btn-outline-danger remove-field" type="button">Remove</button>' +
                    '</div>' +
                    '</div>');
            });

            // Function to add AdditionalField input field
            $("#addAdditionalField").click(function () {
                $("#additionalFieldsContainer").append('<div class="input-group mt-2">' +
                    '<input type="text" name="Team.AdditionalRelatedFields" class="form-control" />' +
                    '<div class="input-group-append">' +
                    '<button class="btn btn-outline-danger remove-field" type="button">Remove</button>' +
                    '</div>' +
                    '</div>');
            });

            // Function to add WorkTrackingSystemOption input fields
            $("#addOption").click(function () {
                $("#workTrackingOptionsContainer").append(
                    '<div class="input-group mt-2">' +
                    '<input type="text" name="Team.WorkTrackingSystemOptions[0].Key" class="form-control" placeholder="Key" />' +
                    '<input type="text" name="Team.WorkTrackingSystemOptions[0].Value" class="form-control" placeholder="Value" />' +
                    '<div class="input-group-append">' +
                    '<button class="btn btn-outline-danger remove-option" type="button">Remove</button>' +
                    '</div>' +
                    '</div>'
                );

                $(".remove-option").click(function () {
                    $(this).parent().parent().remove();
                });
            });

            // Function to remove dynamically added input field
            $(document).on("click", ".remove-field", function () {
                $(this).parent().parent().remove();
            });
        });
    </script>
}
