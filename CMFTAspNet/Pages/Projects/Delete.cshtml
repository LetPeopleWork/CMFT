@page
@model CMFTAspNet.Pages.Projects.DeleteModel

@{
    ViewData["Title"] = "Delete Project";
}

<h1>Delete Project @Model.Entity.Name</h1>

<h3>Are you sure you want to delete this?</h3>
<p>Deleting this will remove all Features and forecast associated with this Project.</p>
    
<div>
    <form method="post">
        <input type="hidden" asp-for="Entity.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>