@page
@model Lighthouse.Backend.Pages.Teams.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Team @Model.Entity.Name</h1>

<h3>Are you sure you want to delete this?</h3>
<p>Deleting this team will remove it from any Project they might have been contributing to.</p>

<div>
    <form method="post">
        <input type="hidden" asp-for="Entity.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>